<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.petrik.koblog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="hu.petrik.koblog.EditProfileActivity"></activity>
        <activity android:name="hu.petrik.koblog.CommentActivity" />
        <activity android:name="hu.petrik.koblog.EditPostActivity" />
        <activity android:name="hu.petrik.koblog.AddPostActivity" />
        <activity android:name="hu.petrik.koblog.HomeActivity" />
        <activity android:name="hu.petrik.koblog.ProfileActivity" />
        <activity android:name="hu.petrik.koblog.AuthActivity" />
        <activity android:name="hu.petrik.koblog.VPActivity" />
        <activity android:name="hu.petrik.koblog.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>